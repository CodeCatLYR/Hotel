<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_listview_item_click"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_header"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_launcher"
        android:layout_width="112dp"
        android:layout_gravity="center_vertical"
        android:layout_height="86dp"/>
    
    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/default_item_title"
                android:id="@+id/tv_title"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="本字条"
                />

            <TextView
                android:id="@+id/tv_location"
                android:textSize="@dimen/default_title_small_size"
                android:layout_marginRight="@dimen/margin_5"
                android:textColor="@color/base_item_sub_title_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="距离100Km"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:textSize="@dimen/default_item_sub_title"
            android:textColor="@color/base_item_sub_title_color"
            android:layout_marginTop="@dimen/margin_2"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="111111111111111111111111111111133333333333333333333333333333333333333333333333333331111111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_number"
                tools:text="3/f"
                android:textSize="@dimen/default_title_small_size"
                android:textColor="@color/base_item_sub_title_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_alignParentRight="true"
                android:src="@drawable/phone"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>