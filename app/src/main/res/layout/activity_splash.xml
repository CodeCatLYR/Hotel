<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/iv_activity_splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_color_white"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/iv_activity_splash_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/iv_activity_splash_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/default_item_margin"
            android:layout_marginTop="@dimen/default_item_margin"
            android:background="@drawable/btn_round_lbs"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_location_change_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/btn_skip"
                android:textColor="@color/fragment_home_title"
                android:textSize="@dimen/default_text_size_11" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/splash_pb_wait"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/splash_progressbar_marginright"
            android:layout_marginTop="@dimen/default_item_margin"
            android:visibility="invisible" />
    </FrameLayout>

