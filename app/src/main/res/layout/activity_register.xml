<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/frame_bg_color"
              android:orientation="vertical" >


    <include
        layout="@layout/activity_headview_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_corner_bg"
        android:layout_margin="14dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#222222"
            android:textSize="15sp"
            android:background="@null"
            android:hint="用户名/手机号"/>

        <View
            style="@style/DividerLineStyle"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>


        <EditText
            android:id="@+id/register_nickname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#222222"
            android:textSize="15sp"
            android:background="@null"
            android:hint="请输入用户昵称"/>



        <View
            style="@style/DividerLineStyle"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>


        <EditText
            android:id="@+id/register_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#222222"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="请输入大于6位的密码"/>

    </LinearLayout>

    <TextView
        android:id="@+id/register_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_orange_corner_bg"
        android:textColor="@android:color/white"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="完成注册"/>


</LinearLayout>
