<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <stroke android:width="0.5dp" android:color="@color/tv_color_red" />
            <solid android:color="@color/default_activity_bg" />
            <!-- //控制圆角大小 -->
            <corners android:radius="14dp" />
        </shape>

    </item>

    <item android:state_enabled="false" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- //设置边距 -->
           <!-- <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />-->

            <stroke android:width="0.5dp" android:color="@color/tv_color_red" />
            <solid android:color="@color/default_activity_bg" />
            <!-- //控制圆角大小 -->
            <corners android:radius="14dp" />
        </shape>

    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <stroke android:width="0.5dp" android:color="@color/tv_color_red" />
            <solid android:color="@color/default_activity_bg" />
            <!-- //控制圆角大小 -->
            <corners android:radius="14dp" />
        </shape>
    </item>
</selector>